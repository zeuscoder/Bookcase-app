<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_dark">

    <!--  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="#00000000">
        <ImageView
            android:id="@+id/log_in_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@mipmap/user__activity_log_in_close"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#cccccc" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/user_log_in_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/user__login_logo"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/user__login_username_icon"/>
        <EditText
            android:id="@+id/user_log_in_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名/邮箱/手机号"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="18sp"
            android:background="@null"
            android:singleLine="true"
            android:textColorHint="#cccccc" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/user__login_pwd_icon"/>
        <EditText
            android:id="@+id/user_log_in__password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:imeActionId="@+id/login"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:background="@null"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColorHint="#cccccc" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#cccccc"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:gravity="end"
        android:text="找回密码"/>

    <Button
        android:id="@+id/user_log_in"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#cccccc"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/user__btn_login"
        android:textSize="20sp"
        android:text="登录" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="#CCCCCC"
        android:gravity="center_horizontal"
        android:text="使用其他方式登录"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">


        <TextView
            android:id="@+id/user_log_in_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="#3F51B5"
            android:gravity="center_horizontal"
            android:text="注册书柜账号"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#cccccc"/>

        <TextView
            android:id="@+id/user_log_in_look"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="#CCCCCC"
            android:gravity="center_horizontal"
            android:text="随便看看"/>

    </LinearLayout>


</LinearLayout>