    <FrameLayout
        android:id="@+id/book_purchase_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC"
        />

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:showDividers="middle"
            android:divider="@mipmap/home__activity_divider"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/app_book_purchase_icon1"
                android:text="客服"
                android:textColor="#FFFFFF"
                android:padding="2dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/app_book_purchase_icon2"
                android:text="店铺"
                android:textColor="#FFFFFF"
                android:padding="2dp"
                />
            <TextView
                android:id="@+id/book_add_favorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/app_book_purchase_icon3"
                android:text="收藏"
                android:textColor="#FFFFFF"
                android:padding="2dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/book_add_shopping_cart"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="加入购物车"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="#FF6600"/>
        <TextView
            android:id="@+id/book_purchase"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="立即购买"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="#FF3333"/>

    </LinearLayout>
</LinearLayout>
