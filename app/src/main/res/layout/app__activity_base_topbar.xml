<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topbar"
    android:orientation="vertical"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/leftBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/app__topbar_layout_tran_bg"
            android:contentDescription="@string/left_of_top_Bar"/>


        <com.zeus.bookcase.app.base.widget.CanaroTextView
            android:id="@+id/topbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:text="ACTIVITY"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/app__topbar_text_size" />

        <TextView
            android:id="@+id/rightBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/app__topbar_layout_tran_bg"
            android:textColor="@color/app__topbar_text_right"
            android:layout_marginRight="12dp"
            android:textSize="@dimen/app__topbar_text_right_size"
            />

    </RelativeLayout>

</LinearLayout>