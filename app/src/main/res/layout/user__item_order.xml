<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:padding="16dp">

    <ImageView
        android:id="@+id/order_book_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@color/divider_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
         android:layout_marginLeft="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/order_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_background"
            android:text="实战Gradle"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/app_background"
                android:text="快递 包邮"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/order_book_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:textColor="@color/red"
                android:text="￥10.0"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/order_book_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:textColor="#333"
                android:text="1本"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/order_book_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:textColor="#999"
            android:text="广东省"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/orderaddress_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/app_background"
                android:text="吕子谋"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/order_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:textColor="#333"
                android:text="15913130672"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/order_address_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:textColor="@color/red"
                android:text="￥10.0"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>