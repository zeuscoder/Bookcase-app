<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="182dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
        android:layout_marginRight="@dimen/activity_horizontal_margin_small"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="4sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageButton
                android:id="@+id/completeCommand"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/positive_loud"
                android:src="@drawable/case__item__tack" />

            <ImageView
                android:id="@+id/case_choose_my_book_image"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/case_choose_my_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin_small"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
                android:layout_marginStart="@dimen/activity_horizontal_margin_small"
                android:layout_toRightOf="@+id/case_choose_my_book_image"
                android:layout_toLeftOf="@+id/completeCommand"
                android:textColor="@color/grey_dark_2"
                android:singleLine="true"
                android:fontFamily="sans-serif-bold"
                android:textSize="20sp"
                tools:text="Name"/>

            <TextView
                android:id="@+id/case_choose_my_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/case_choose_my_book_title"
                android:layout_marginTop="@dimen/activity_horizontal_margin_small"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
                android:layout_marginStart="@dimen/activity_horizontal_margin_small"
                android:layout_toRightOf="@+id/case_choose_my_book_image"
                android:layout_toLeftOf="@+id/completeCommand"
                android:textColor="@color/grey_dark"
                android:fontFamily="sans-serif-bold"
                android:maxLines="5"
                android:textSize="12sp"
                tools:text="Description"/>

            <TextView
                android:id="@+id/case_choose_my_book_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/case_choose_my_book_author"
                android:layout_marginTop="@dimen/activity_horizontal_margin_small"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
                android:layout_marginStart="@dimen/activity_horizontal_margin_small"
                android:layout_toRightOf="@+id/case_choose_my_book_image"
                android:layout_toLeftOf="@+id/completeCommand"
                android:textColor="@color/grey_dark"
                android:fontFamily="sans-serif-bold"
                android:maxLines="4"
                android:textSize="12sp"
                tools:text="Description"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>