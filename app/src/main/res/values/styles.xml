<resources>

    <!--    &lt;!&ndash; Base application theme. &ndash;&gt;
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            &lt;!&ndash; Customize your theme here. &ndash;&gt;
        </style>-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Guillotine">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Guillotine" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimaryDark">@color/app_background</item>
        <item name="android:colorPrimary">@color/app_background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>


    <!-- 全屏幕拉伸 -->
    <style name="layout_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 纵向分布 -->
    <style name="layout_vertical" parent="layout_full">
        <item name="android:layout_height">0dip</item>
    </style>



    <!-- home页面的ToolBar -->
    <style name="Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/app_background</item>
    </style>



    <style name="LinearLayout" />

    <style name="LinearLayout.GuillotineItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/guillotine_small_margin</item>
    </style>

    <style name="ImageView" />

    <style name="ImageView.GuillotineItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/guillotine_large_margin</item>
    </style>

    <style name="TextView" />

    <style name="TextView.ToolbarTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.GuillotineItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/guillotine_small_margin</item>
        <item name="android:textSize">@dimen/guillotine_item_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.GuillotineItem.Selected">
        <item name="android:textColor">@color/selected_item_color</item>
    </style>


    <style name="HomeLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>



    <!--**************************************************MarketFragment*******************************************************-->





    <!--**************************************************CaseFragment*******************************************************-->
    <style name="slideDeck">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="maxViewsOnScreen">@integer/maximumViewsOnScreen</item>
        <item name="enableOverdrawImprovement">false</item>
        <item name="itemsMarginTop">8dp</item>
        <item name="itemsMarginLeftRight">8dp</item>
        <item name="animationDuration">200</item>
    </style>


    <!--**************************************************MySelfFragment*******************************************************-->
    <!-- User Account -->
    <style name="UserMainItemLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/card_avatar_bar</item>
    </style>

    <style name="UserMainItemTextTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/keyline_1</item>
        <item name="android:layout_marginBottom">@dimen/keyline_1</item>
        <item name="android:layout_marginLeft">@dimen/keyline_1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/keyline_1</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="UserMainItemTextDsrc">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawableRight">@mipmap/user__ic_global_arrow_right_2px</item>
        <item name="android:drawablePadding">@dimen/keyline_1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/keyline_1</item>
        <item name="android:textColor">#333333</item>
    </style>
</resources>
